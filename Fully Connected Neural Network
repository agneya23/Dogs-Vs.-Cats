# Create a sequential model (3 hidden layers)
model = nn.Sequential(nn.Linear(3 * 96 * 96, 24),
                      nn.ReLU(),
                      nn.Linear(24, 12),
                      nn.ReLU(),
                      nn.Linear(12, 6),
                      nn.ReLU(),
                      nn.Linear(6, 2),
                      nn.Softmax(dim=1))

# Define loss and optimizer
loss = nn.CrossEntropyLoss()
optimizer = torch.optim.SGD(model.parameters(), lr=0.05)
